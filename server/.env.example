# Server Configuration
PORT=3001
NODE_ENV=development

# WPPConnect Configuration
WPP_SESSION_NAME=default-session
WPP_HEADLESS=true
WPP_DEVTOOLS=false
WPP_USE_CHROME=true

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Database (optional, for storing session data)
DATABASE_URL=

# WhatsApp Configuration
WHATSAPP_SESSION_TIMEOUT=3600000
WHATSAPP_AUTO_CLOSE=false

# Facebook Configuration (Coming Soon)
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_API_KEY=
FACEBOOK_WEBHOOK_URL=

# Instagram Configuration (Coming Soon)
INSTAGRAM_APP_ID=
INSTAGRAM_APP_SECRET=
INSTAGRAM_API_KEY=
INSTAGRAM_WEBHOOK_URL=

# Session Storage
SESSION_STORAGE_PATH=./sessions
SESSION_CLEANUP_INTERVAL=3600000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/server.log
